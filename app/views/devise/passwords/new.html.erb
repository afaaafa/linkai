<div class="max-w-md mx-auto px-4 sm:px-6 py-12 font-inter">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Forgot your password?</h2>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-6">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-6">
        <%= f.submit "Send me reset password instructions", class: "w-full bg-indigo-500 hover:bg-indigo-600 text-white font-medium py-3 px-4 rounded-md transition-colors duration-200" %>
      </div>
    <% end %>

    <div class="text-center text-sm space-y-2">
      <% if devise_mapping.registerable? %>
        <p class="text-gray-600">
          Não tem conta? 
          <%= link_to "Cadastre-se", new_registration_path(resource_name), class: "text-indigo-600 hover:text-indigo-800" %>
        </p>
      <% end %>
      
      <% if devise_mapping.confirmable? %>
        <p>
          <%= link_to "Não recebeu instruções de confirmação?", new_confirmation_path(resource_name), class: "text-indigo-600 hover:text-indigo-800" %>
        </p>
      <% end %>
      
      <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) %>
        <p>
          <%= link_to "Não recebeu instruções de desbloqueio?", new_unlock_path(resource_name), class: "text-indigo-600 hover:text-indigo-800" %>
        </p>
      <% end %>
      
      <p>
        <%= link_to "Voltar para o login", new_session_path(resource_name), class: "text-indigo-600 hover:text-indigo-800" %>
      </p>
    </div>
  </div>
</div>