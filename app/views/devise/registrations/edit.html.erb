<div class="max-w-md mx-auto px-4 sm:px-6 py-12 font-inter">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 mb-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Edit <%= resource_name.to_s.humanize %></h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-5">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-5 p-3 bg-yellow-50 border border-yellow-200 rounded-md text-sm text-yellow-700">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="mb-5">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <span class="text-xs text-gray-500 italic">(leave blank if you don't want to change it)</span>
        <%= f.password_field :password, autocomplete: "new-password", 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
        <% if @minimum_password_length %>
          <p class="mt-1 text-xs text-gray-500"><%= @minimum_password_length %> characters minimum</p>
        <% end %>
      </div>

      <div class="mb-5">
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-6">
        <%= f.label :current_password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <span class="text-xs text-gray-500 italic">(we need your current password to confirm your changes)</span>
        <%= f.password_field :current_password, autocomplete: "current-password", 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-4">
        <%= f.submit "Update", class: "w-full bg-indigo-500 hover:bg-indigo-600 text-white font-medium py-3 px-4 rounded-md transition-colors duration-200" %>
      </div>
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 mb-6">
    <h3 class="text-lg font-semibold text-gray-800 mb-4">Cancel my account</h3>
    
    <div class="mb-4">
      <p class="text-gray-600 mb-4">Unhappy with our service?</p>
      <%= button_to "Cancel my account", registration_path(resource_name), 
          data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, 
          method: :delete, 
          class: "w-full bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-4 rounded-md transition-colors duration-200" %>
    </div>
  </div>

  <%= link_to :back, class: "text-indigo-600 hover:text-indigo-800 transition-colors duration-200 inline-flex items-center" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Back
  <% end %>
</div>