<% if notice %>
  <div class="max-w-4xl mx-auto mt-6 px-4 sm:px-6">
    <div class="bg-green-50 border border-green-200 rounded-md p-4 text-green-700">
      <%= notice %>
    </div>
  </div>
<% end %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 py-12 font-inter">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
    <div class="p-6">
      <h2 class="text-2xl font-bold text-gray-800 mb-4"><%= @tree.name %></h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <div>
          <div class="mb-4">
            <p class="text-sm text-gray-500 mb-1">Instagram</p>
            <p class="text-gray-800"><%= @tree.instagram.present? ? @tree.instagram : "Não informado" %></p>
          </div>
          
          <div class="mb-4">
            <p class="text-sm text-gray-500 mb-1">X (Twitter)</p>
            <p class="text-gray-800"><%= @tree.x.present? ? @tree.x : "Não informado" %></p>
          </div>
        </div>
        
        <div>
          <div class="mb-4">
            <p class="text-sm text-gray-500 mb-1">YouTube</p>
            <p class="text-gray-800"><%= @tree.youtube.present? ? @tree.youtube : "Não informado" %></p>
          </div>
          
          <div class="mb-4">
            <p class="text-sm text-gray-500 mb-1">Estilo</p>
            <p class="text-gray-800 capitalize"><%= @tree.style %></p>
          </div>
        </div>
      </div>
      
      <div class="pt-4 border-t border-gray-200">
        <p class="text-sm text-gray-500 mb-2">ID do Usuário: <%= @tree.user_id %></p>
      </div>
    </div>
    
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex flex-wrap gap-3">
      <%= link_to edit_tree_path(@tree), class: "bg-indigo-500 hover:bg-indigo-600 text-white font-medium py-2 px-4 rounded-md transition-colors duration-200" do %>
        Editar
      <% end %>
      <%= link_to trees_path, class: "bg-white border border-gray-300 hover:bg-gray-50 text-gray-700 font-medium py-2 px-4 rounded-md transition-colors duration-200" do %>
        Voltar
      <% end %> 
      <%= button_to "Excluir", @tree, method: :delete, class: "bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-4 rounded-md transition-colors duration-200" %>
    </div>
  </div>
</div>