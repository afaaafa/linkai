<div class="max-w-md mx-auto px-4 sm:px-6 py-12 font-inter">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Create Your Tree</h2>
    
    <%= form_with(model: tree) do |form| %>
      
      <% if tree.errors.any? %>
        <div class="mb-6 bg-red-50 border border-red-200 rounded-md p-4">
          <h3 class="text-red-800 font-medium mb-2">
            <%= pluralize(tree.errors.count, "error") %> prohibited this tree from being saved:
          </h3>
          <ul class="list-disc pl-5 text-red-700 text-sm">
            <% tree.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-5">
        <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-5">
        <%= form.label :instagram, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :instagram, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-5">
        <%= form.label :x, "Twitter (X)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :x, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-5">
        <%= form.label :youtube, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :youtube, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-6">
        <%= form.label :style, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :style, 
            [["Default", "default"], ["Modern", "modern"], ["Minimalistic", "minimalistic"], ["Classic", "classic"]], 
            { prompt: "Select a style" }, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 bg-white" %>
      </div>

      <div class="flex justify-between items-center">
        <%= form.submit "Save", class: "bg-indigo-500 hover:bg-indigo-600 text-white font-medium py-3 px-6 rounded-md transition-colors duration-200" %>
        <%= link_to "Cancel", root_path, class: "text-gray-500 hover:text-gray-700 transition-colors duration-200" %>
      </div>
    <% end %>
  </div>
</div>