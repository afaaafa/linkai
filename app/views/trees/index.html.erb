<% content_for :title, "Trees" %>

<% if notice %>
  <div class="max-w-4xl mx-auto mt-6 px-4 sm:px-6">
    <div class="bg-green-50 border border-green-200 rounded-md p-4 text-green-700">
      <%= notice %>
    </div>
  </div>
<% end %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 py-12 font-inter">
  <div class="mb-8 flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-800">Trees</h1>
    <%= link_to "New tree", new_tree_path, class: "bg-indigo-500 hover:bg-indigo-600 text-white font-medium py-2 px-4 rounded-md transition-colors duration-200" %>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
    <% if @trees.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <% @trees.each do |tree| %>
          <div class="p-6">
            <h2 class="text-2xl font-bold text-gray-800 mb-4"><%= tree.name %></h2>
            <%= render tree %>
            <div class="mt-4">
              <%= link_to tree, class: "text-indigo-600 hover:text-indigo-800 transition-colors duration-200 inline-flex items-center" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Ver Tree
              <% end %> 
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-gray-50 border border-gray-200 rounded-md p-8 text-center text-gray-600">
        <p>No trees found. Click "New tree" to create your first tree.</p>
      </div>
    <% end %>
  </div>
</div>
